#include <iostream>
using namespace std;

int faktorial (int a)  //fungsi cari faktorial
{
    if (a==0)
        return 1;
    else
        return (a*faktorial(a-1));
}

int main (){
    int x;
        cout<<"Mencari Nilai Faktorial \n";
        cout<<"Masukkan nilai n = "; //input bilangan ke n
        cin>>x;
        cout<<"Faktorial "<<x<<"! = "<<faktorial(x)<<endl; //memanggil fungsi dan menampilkan hasil
}
